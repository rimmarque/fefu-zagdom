{% import _self as macros %}

{% set scope = {
    items: items ?? [],
} %}

{% macro content(scope) %}
    {% import _self as macros %}

    <section class="NewsList">
        <header class="NewsList__header">
            <h2 class="NewsList__title">
                Новости
            </h2>
            <a href="{{ route('news') }}" class="Button Button--secondary">
                Все новости
            </a>
        </header>
        <ul class="NewsList__list">
            {% for item in scope.items %}
                <li class="NewsList__item">
                    {% include '@components/news-card/news-card.twig' with {
                        data: item,
                    } %}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endmacro %}

{{ macros.content(scope) }}
